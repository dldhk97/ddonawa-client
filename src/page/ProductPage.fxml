                  <Insets left="20.0" />
               </padding>
            </VBox>
            <Button fx:id="zzimBtn" mnemonicParsing="false" onAction="#OnZzimBtnClicked" text="찜 하기">
               <HBox.margin>
                  <Insets left="80.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </HBox>
      <HBox fx:id="zzimBar" alignment="CENTER" visible="false">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="목표 가격" />

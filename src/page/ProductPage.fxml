   <children>
      <HBox alignment="CENTER_LEFT">
         <children>
            <VBox alignment="CENTER">
               <children>
                  <ImageView fx:id="Image" fitHeight="150.0" fitWidth="200.0" onMouseClicked="#OnProductImageClicked" pickOnBounds="true" preserveRatio="true" />

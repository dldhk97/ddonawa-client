               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </TextField>
            <Button fx:id="zzimRegister" mnemonicParsing="false" onAction="#OnZzimRegisterBtnClicked" text="찜" />
         </children>
      </HBox>
      <LineChart>
        <xAxis>
          <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis side="LEFT" />
        </yAxis>
      </LineChart>
      <Button fx:id="goToMainBtn" mnemonicParsing="false" onAction="#OnGoToMainBtnClicked" text="메인화면" />
   </children>
